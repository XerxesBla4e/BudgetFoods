<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VendorSignUp">

    <RelativeLayout
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/background_toolbar">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="REGISTER"
            android:textColor="@color/lightblue"
            android:textSize="25dp"
            android:textStyle="bold"></TextView>

        <ImageView

            android:id="@+id/bk2"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:tooltipText="Back"
            app:srcCompat="@drawable/back" />

        <ImageView
            android:id="@+id/cordinates"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:tooltipText="Retrive RealTime Location"
            app:srcCompat="@drawable/location" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/menu">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/profile"
                    android:layout_width="80dp"
                    android:layout_height="70dp"
                    android:layout_centerHorizontal="true"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:src="@drawable/account" />
                <TextView
                    android:id="@+id/prompt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/profile"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="4dp"
                    android:text="Click Logo to Select Profile Pic"
                    android:textColor="@color/lightBlue"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/specialkey"
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:layout_below="@+id/prompt"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="17dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/edit_text_style"
                    android:drawableStart="@drawable/key1"
                    android:drawableLeft="@drawable/phone"
                    android:drawablePadding="5dp"
                    android:drawableTint="@color/black"
                    android:hint="Enter Special Key"
                    android:textColor="@color/greyish"></EditText>

                <EditText
                    android:id="@+id/editname"
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:layout_below="@+id/specialkey"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/edit_text_style"
                    android:drawableStart="@drawable/address"
                    android:drawableLeft="@drawable/profile"
                    android:drawablePadding="5dp"
                    android:drawableTint="@color/black"
                    android:hint="Enter Your Name"
                    android:textColor="@color/greyish"></EditText>

                <EditText
                    android:id="@+id/editmarket"
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:layout_below="@+id/editname"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/edit_text_style"
                    android:drawableStart="@drawable/mrkt"
                    android:drawableLeft="@drawable/profile"
                    android:drawablePadding="5dp"
                    android:drawableTint="@color/black"
                    android:hint="Enter Business Name"
                    android:textColor="@color/greyish"></EditText>

                <EditText
                    android:id="@+id/editdeliveryfee"
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:layout_below="@+id/editmarket"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/edit_text_style"
                    android:drawableStart="@drawable/car"
                    android:drawableLeft="@drawable/profile"
                    android:drawablePadding="5dp"
                    android:drawableTint="@color/black"
                    android:hint="Enter Delivery Fee"
                    android:textColor="@color/greyish"></EditText>

                <EditText
                    android:id="@+id/editemail"
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:layout_below="@+id/editdeliveryfee"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/edit_text_style"
                    android:drawableStart="@drawable/email"
                    android:drawableLeft="@drawable/email"
                    android:drawablePadding="5dp"
                    android:drawableTint="@color/black"
                    android:hint="Enter Your Email"
                    android:textColor="@color/greyish"></EditText>


                <EditText
                    android:id="@+id/editphone"
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:layout_below="@+id/editemail"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/edit_text_style"
                    android:drawableStart="@drawable/phone"
                    android:drawableLeft="@drawable/phone"
                    android:drawablePadding="5dp"
                    android:drawableTint="@color/black"
                    android:hint="Enter Your Phone Number"
                    android:textColor="@color/greyish"></EditText>

                <EditText
                    android:id="@+id/editaddress"
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:layout_below="@+id/editphone"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/edit_text_style"
                    android:drawableStart="@drawable/address"
                    android:drawableLeft="@drawable/phone"
                    android:drawablePadding="5dp"
                    android:drawableTint="@color/black"
                    android:hint="Enter Your Full Address"
                    android:textColor="@color/greyish"></EditText>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/editpasslayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/editaddress"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="5dp"
                    app:endIconDrawable="@drawable/view_pass"
                    app:endIconMode="password_toggle"
                    app:passwordToggleTint="@color/orange"
                    app:startIconDrawable="@drawable/pass">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editpassword"
                        android:layout_width="match_parent"
                        android:layout_height="37dp"
                        android:background="@drawable/edit_text_style"
                        android:hint="Enter Password"
                        android:inputType="textPassword"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/editpasslayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/editpasslayout"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="5dp"
                    app:endIconDrawable="@drawable/view_pass"
                    app:endIconMode="password_toggle"
                    app:passwordToggleTint="@color/orange"
                    app:startIconDrawable="@drawable/pass">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editrepassword"
                        android:layout_width="match_parent"
                        android:layout_height="37dp"
                        android:background="@drawable/edit_text_style"
                        android:hint="Re-enter Password"
                        android:inputType="textPassword"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black" />
                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/btnsgnup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/editpasslayout2"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="17dp"
                    android:background="@drawable/button_style"
                    android:fontFamily="sans-serif-condensed"
                    android:text="SIGNUP"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"></Button>

                <TextView
                    android:id="@+id/cltsgnup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btnsgnup"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:text="SignUp As Client"
                    android:textColor="@color/lightBlue"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>

    </RelativeLayout>


</RelativeLayout>